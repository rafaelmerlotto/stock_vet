 <div class="w-full h-auto flex justify-start items-start gap-4 mb-7">

 <%= link_to "Edit", edit_article_path(@article), class:"w-[60px] h-[30px] bg-blue-400 text-white flex justify-center items-center rounded  cursor-pointer"%>
